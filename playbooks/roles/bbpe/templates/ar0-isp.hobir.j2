router bgp 65444
 neighbor {{ system_address }} inherit peer-session IRONMAN_PE_SESSION
 neighbor {{ system_address }} description {{ node_name }} - IRONMAN_PE_SUBS_{{ ironman_hobir_policy }}_POLICY
 neighbor {{ system_address }} password 0 {{ ar0_isp_hobir_bgp_password }}
 address-family ipv4
  neighbor {{ system_address }} activate
  neighbor {{ system_address }} inherit peer-policy IRONMAN_PE_SUBS_{{ ironman_hobir_policy }}_POLICY
end
